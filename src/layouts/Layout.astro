---
import { Seo } from "astro-seo-meta";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "@fontsource/montserrat/variable.css";
import "@fontsource/playfair-display/400.css";
import "@fontsource/playfair-display/900.css";
import "@fontsource/playfair-display/variable.css";
import { WEBSITE_URL } from "../utils/constants.mjs";

export interface Props {
  title: string;
  description: string;
  endpoint?: string;
}

const { title, description, endpoint } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="manifest" href="/manifest.json" />
    <Seo
      title={`Luca Pontrandolfo - ${title}`}
      description={description}
      icon="/favicon.ico"
      colorScheme="light"
      themeColor="#000000"
      keywords={[
        "website",
        "portfolio",
        "art",
        "artist",
        "galleries",
        "Venezia",
        "Torino",
        "astro",
      ]}
      twitter={{
        image: "/src/images/fotoPortrait.png",
        card: "summary",
      }}
      facebook={{
        image: "/src/images/fotoPortrait.png",
        url: `${WEBSITE_URL}${endpoint ? endpoint : ""}`,
        type: "website",
      }}
    />
  </head>

  <body>
    <Navbar currentRoute={title} />
    <main id="swup" class="transition-fade-anim">
      <slot />
    </main>
    <Footer />
    <script>
      import Swup from "swup";
      const swup = new Swup();
    </script>
    <script src="../../node_modules/flowbite/dist/flowbite.js">
      import "flowbite";
    </script>
