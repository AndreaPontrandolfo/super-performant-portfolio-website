---
import { routes } from "../utils/constants.mjs";
import Avatar from "./Avatar.astro";
import NavbarDropdownItem from "./NavbarDropdownItem.astro";
import NavbarItem from "./NavbarItem.astro";

export interface Props {
  currentRoute: string;
}

const { currentRoute } = Astro.props as Props;
---

<nav
  class="bg-white px-2 sm:px-4 py-2.5 fixed w-full z-20 top-0 left-0 border-b border-gray-200 shadow-lg"
>
  <div class="flex flex-wrap justify-between items-center mx-auto max-w-5xl">
    <header>
      <a href={routes.INDEX} class="flex items-center" rel="prefetch">
        <Avatar />
        <div class="ml-4">
          <h1 class="format self-center text-2xl text-gray-700 dark:text-white">
            Luca Pontrandolfo
          </h1>
        </div>
      </a>
    </header>
    <div class="flex">
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-6 h-6"
          aria-hidden="true"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
    <div
      class="hidden justify-between items-center w-full md:flex md:w-auto md:order-1"
      id="navbar-sticky"
    >
      <ul
        class="flex flex-col items-center p-4 xl:pr-0 mt-4 bg-gray-50 rounded-lg border border-gray-100 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-white"
      >
        <NavbarItem
          text="Home"
          href={routes.INDEX}
          isActive={currentRoute === "Homepage"}
        />
        <li class="min-w-[5rem] min-h-[1.2rem]">
          <div id="dropdownNavbar" class="overflow-hidden closed absolute">
            <button
              id="dropdownNavbarLink"
              data-dropdown-toggle="dropdownNavbar"
              class={`flex justify-between items-center hover:bg-gray-100 md:hover:bg-transparent md:border-0 format leading-none ${
                currentRoute === "Paintings" ||
                currentRoute === "Venice Series" ||
                currentRoute === "Turin Series"
                  ? "text-slate-800"
                  : ""
              } md:hover:text-slate-800`}
              >Collections
              <svg
                class="ml-1 w-5 h-5"
                aria-hidden="true"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </button>
            <ul
              class="text-sm text-gray-700 rounded bg-white"
              aria-labelledby="dropdownLargeButton"
            >
              <NavbarDropdownItem
                href={routes.PAINTINGS}
                text="Paintings"
                isActive={currentRoute === "Paintings"}
              />
              <NavbarDropdownItem
                href={routes.VENICE}
                text="Venice Series"
                isActive={currentRoute === "Venice Series"}
              />
              <NavbarDropdownItem
                href={routes.TURIN}
                text="Turin Series"
                isActive={currentRoute === "Turin Series"}
              />
            </ul>
          </div>
        </li>
        <NavbarItem
          text="Contacts"
          href={routes.CONTACTS}
          isActive={currentRoute === "Contacts"}
        />
        <NavbarItem
          text="About"
          href={routes.ABOUT}
          isActive={currentRoute === "About"}
        />
      </ul>
    </div>
  </div>
</nav>
<style>
  .overflow-hidden.closed ul {
    height: 0;
  }
</style>
