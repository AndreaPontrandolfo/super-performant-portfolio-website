---
import { Picture } from "astro-imagetools/components";
import { sharedPictureProps } from "../utils/sharedPictureProps";
import Container from "./Container.astro";
import PictureWrapper from "./PictureWrapper.astro";
---

<Container>
  <div class="row">
    <div class="column">
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.1.png"
        title="ReflexTOn 1"
      />
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.3.png"
        title="ReflexTOn 3"
      />
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.5.png"
        title="ReflexTOn 5"
      />
    </div>
    <div class="column">
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.2.png"
        title="ReflexTOn 2"
      />
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.4.png"
        title="ReflexTOn 4"
      />
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.6.png"
        title="ReflexTOn 6"
      />
    </div>
    <div class="column">
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.7.png"
        title="ReflexTOn 7"
      />
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.8.png"
        title="ReflexTOn 8"
      />
    </div>
    <div class="column">
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.9.png"
        title="ReflexTOn 9"
      />
      <PictureWrapper
        src="/src/images/torinoSeries/ReflexTOn.10.png"
        title="ReflexTOn 10"
      />
    </div>
  </div>
</Container>
<style>
  .row {
    display: flex;
    flex-wrap: wrap;
    padding: 0 4px;
  }

  /* Create four equal columns that sits next to each other */
  .column {
    flex: 25%;
    max-width: 25%;
    padding: 0 4px;
  }

  /* This is not working */
  /* .column img {
    margin-top: 8px;
    vertical-align: middle;
    width: 100%;
  } */

  /* Responsive layout - makes a two column-layout instead of four columns */
  @media screen and (max-width: 800px) {
    .column {
      flex: 50%;
      max-width: 50%;
    }
  }

  /* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
  @media screen and (max-width: 600px) {
    .column {
      flex: 100%;
      max-width: 100%;
    }
  }
</style>
