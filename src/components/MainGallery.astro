---
import { Picture } from "astro-imagetools/components";
---

<div class="row">
  <div class="column">
    <Picture src="/src/images/firstgallery/1PlanetEarth.png" alt="artwork called Planet Earth" flatten={true}
      preload="webp" fallbackFormat="jpg" includeSourceFormat={false} />
  </div>
  <div class="column">
    <Picture src="/src/images/firstgallery/2Tothemusiccity.png" alt="artwork called To the music city" width={1024}
      flatten={true} preload="webp" fallbackFormat="jpg" includeSourceFormat={false} />
  </div>
  <div class="column">
    <Picture src="/src/images/firstgallery/3Through.png" alt="artwork called Through" width={1024} flatten={true}
      preload="webp" fallbackFormat="jpg" includeSourceFormat={false} />
  </div>
  <div class="column">
    <Picture src="/src/images/firstgallery/4Earth.png" alt="artwork called Earth" width={1024} flatten={true}
      preload="webp" fallbackFormat="jpg" includeSourceFormat={false} />
  </div>
  <div class="column">
    <Picture src="/src/images/firstgallery/5Accademia.png" alt="artwork called Accademia" width={1024} flatten={true}
      preload="webp" fallbackFormat="jpg" includeSourceFormat={false} />
  </div>
  <div class="column">
    <Picture src="/src/images/firstgallery/6Why_.png" alt="artwork called Why" width={1024} flatten={true}
      preload="webp" fallbackFormat="jpg" includeSourceFormat={false} />
  </div>
</div>
<style>
  .row {
    display: flex;
    flex-wrap: wrap;
    padding: 0 4px;
  }

  /* Create four equal columns that sits next to each other */
  .column {
    flex: 25%;
    max-width: 25%;
    padding: 0 4px;
  }

  .column img {
    margin-top: 8px;
    vertical-align: middle;
    width: 100%;
  }

  /* Responsive layout - makes a two column-layout instead of four columns */
  @media screen and (max-width: 800px) {
    .column {
      flex: 50%;
      max-width: 50%;
    }
  }

  /* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
  @media screen and (max-width: 600px) {
    .column {
      flex: 100%;
      max-width: 100%;
    }
  }
</style>