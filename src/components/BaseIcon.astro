---
import { Icon } from "astro-icon";
export interface Props {
  name: string;
  title: string;
  sizes?: number;
  color?: string;
}

const { name, title, sizes = 6, color = "" } = Astro.props as Props;
---

<Icon
  name={name}
  class={`w-${sizes} h-${sizes} ${color}`}
  fill="currentColor"
/><span class="sr-only">{title}</span>
