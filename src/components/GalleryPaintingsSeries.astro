---
import { Picture } from "astro-imagetools/components";
import { sharedPictureProps } from "../utils/sharedPictureProps";
import Container from "./Container.astro";
---

<Container>
  <div class="row">
    <div class="column">
      <Picture
        src="/src/images/firstgallery/1PlanetEarth.png"
        alt="artwork called PlanetEarth"
        {...sharedPictureProps}
      />
      <Picture
        src="/src/images/firstgallery/5Accademia.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
      <Picture
        src="/src/images/firstgallery/9South.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
    </div>
    <div class="column">
      <Picture
        src="/src/images/firstgallery/2Tothemusiccity.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
      <Picture
        src="/src/images/firstgallery/6Why_.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
      <Picture
        src="/src/images/firstgallery/10Canal.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
    </div>
    <div class="column">
      <Picture
        src="/src/images/firstgallery/3Through.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
      <Picture
        src="/src/images/firstgallery/7Carnival.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
      <Picture
        src="/src/images/firstgallery/11Contact.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
    </div>
    <div class="column">
      <Picture
        src="/src/images/firstgallery/4Earth.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
      <Picture
        src="/src/images/firstgallery/8CoffeeBreak.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
      <Picture
        src="/src/images/firstgallery/12Gold.png"
        alt="artwork called ReflexTOn"
        {...sharedPictureProps}
      />
    </div>
  </div>
</Container>
<style>
  .row {
    display: flex;
    flex-wrap: wrap;
    padding: 0 4px;
  }

  /* Create four equal columns that sits next to each other */
  .column {
    flex: 25%;
    max-width: 25%;
    padding: 0 4px;
  }

  /* This is not working */
  /* .column img {
    margin-top: 8px;
    vertical-align: middle;
    width: 100%;
  } */

  /* Responsive layout - makes a two column-layout instead of four columns */
  @media screen and (max-width: 800px) {
    .column {
      flex: 50%;
      max-width: 50%;
    }
  }

  /* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
  @media screen and (max-width: 600px) {
    .column {
      flex: 100%;
      max-width: 100%;
    }
  }
</style>
